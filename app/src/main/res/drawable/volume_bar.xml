<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/player_white"
                android:centerY="0.75"
                android:endColor="@color/player_white"
                android:startColor="@color/player_white" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <color android:color="@color/player_highlight_blue" />
        </clip>
    </item>

</layer-list>